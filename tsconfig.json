{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "moduleDetection": "force",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["bin"]
}
